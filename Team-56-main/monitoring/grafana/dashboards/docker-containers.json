{
  "id": null,
  "title": "Application Metrics Dashboard",
  "tags": ["application", "metrics"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Process CPU Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total[5m]) * 100",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        }
      }
    },
    {
      "id": 2,
      "title": "Process Memory Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "process_resident_memory_bytes / 1024 / 1024",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes"
        }
      }
    },
    {
      "id": 3,
      "title": "HTTP Request Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "refId": "A",
          "legendFormat": "{{method}} {{route}} - {{status}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "yAxes": [
        {
          "unit": "reqps"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}
